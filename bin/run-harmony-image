#!/bin/bash

set -ex

find . | grep -E "(__pycache__|\.pyc|\.pyo$)" | xargs rm -rf

# Import variables from .env file if one exists
if [ -f .env ]; then
  docker run --platform linux/amd64 --rm -it -v $(pwd):/home --env-file=.env sds/maskfill-harmony "$@"
else
  docker run --platform linux/amd64 --rm -it -v $(pwd):/home sds/maskfill-harmony "$@"
fi
