#!/bin/bash
###############################################################################
#
# Execute the ghcr.io/nasa/harmony-maskfill-test Docker image as a container.
# This is designed for us within a GitHub workflow.
#
# 2025-09-15: Updated for GitHub and new GHRC Docker image names.
#
###############################################################################

set -ex

# Remove old compiled bytecode files
find . | grep -E "(__pycache__|\.pyc|\.pyo$)" | xargs rm -rf

# Make the directory into which XML format test reports will be saved
mkdir -p reports/test-reports

# Make the directory into which coverage reports will be saved
mkdir -p reports/coverage

# Run the test Docker image as a container with mounted volumes for XML report
# output and test coverage reporting
docker run --platform linux/amd64 --rm \
	-v $(pwd)/reports/test-reports:/home/reports/test-reports \
	-v $(pwd)/reports/coverage:/home/reports/coverage \
	ghcr.io/nasa/harmony-maskfill-test "${@:2}"
